<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.egit.ui.RepositoriesView?after=branch">
         <menu
               label="%TeamGitFlowMenu.name">
            <command
                  commandId="org.eclipse.egit.gitflow.ui.command.init"
                  label="%TeamGitFlowInit.name"
                  style="push">
               <visibleWhen
                     checkEnabled="false">
                  <reference
                        definitionId="org.eclipse.egit.ui.repositoryTreePathNode">
                  </reference>
               </visibleWhen>
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="org.eclipse.egit.ui.commandCategory"
            id="org.eclipse.egit.gitflow.ui.command.init"
            name="%TeamGitFlowInit.name">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="org.eclipse.egit.gitflow.ui.command.init">
         <class
               class="org.eclipse.egit.gitflow.ui.internal.actions.InitHandler">
         </class>
         <activeWhen>
            <iterate>
               <or>
                  <instanceof
                        value="org.eclipse.egit.ui.internal.repository.tree.RepositoryTreeNode">
                  </instanceof>
               </or>
            </iterate>
         </activeWhen>
      </handler>
   </extension>


</plugin>
